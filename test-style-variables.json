{
  "metadata": {
    "template": "style-variables-test",
    "version": "1.0.0",
    "description": "Test template for style variables"
  },
  "styleVariables": {
    "primaryColor": "#3b82f6",
    "secondaryColor": "#10b981",
    "backgroundColor": "#f8fafc",
    "textColor": "#1f2937",
    "borderRadius": "8px",
    "spacing": "16px",
    "colors": {
      "accent": "#8b5cf6",
      "warning": "#f59e0b",
      "danger": "#ef4444"
    },
    "fonts": {
      "heading": "Inter, sans-serif",
      "body": "system-ui, sans-serif"
    }
  },
  "component": {
    "id": "style-test-root",
    "type": "div",
    "props": {
      "className": "p-8 min-h-screen",
      "style": "background-color: var(--backgroundColor); color: var(--textColor); font-family: var(--fonts-body);"
    },
    "children": [
      {
        "id": "test-header",
        "type": "h1",
        "props": {
          "className": "text-3xl font-bold mb-6",
          "style": "color: var(--primaryColor); font-family: var(--fonts-heading);"
        },
        "children": ["Style Variables Test"],
        "editable": { "contentEditable": true }
      },
      {
        "id": "test-card",
        "type": "div",
        "props": {
          "className": "p-6 shadow-lg",
          "style": "background: white; border: 2px solid var(--primaryColor); border-radius: var(--borderRadius); margin-bottom: var(--spacing);"
        },
        "children": [
          {
            "id": "card-title",
            "type": "h2",
            "props": {
              "className": "text-xl font-semibold mb-4",
              "style": "color: var(--secondaryColor);"
            },
            "children": ["Primary Card"],
            "editable": { "contentEditable": true }
          },
          {
            "id": "card-text",
            "type": "p",
            "props": {
              "className": "mb-4",
              "style": "color: var(--textColor);"
            },
            "children": ["This card uses CSS variables for styling. The primary color should be blue, secondary green."],
            "editable": { "contentEditable": true }
          }
        ]
      },
      {
        "id": "color-showcase",
        "type": "div",
        "props": {
          "className": "grid grid-cols-3 gap-4"
        },
        "children": [
          {
            "id": "accent-box",
            "type": "div",
            "props": {
              "className": "p-4 text-white text-center rounded",
              "style": "background-color: var(--colors-accent); border-radius: var(--borderRadius);"
            },
            "children": ["Accent Color"],
            "editable": { "contentEditable": true }
          },
          {
            "id": "warning-box",
            "type": "div",
            "props": {
              "className": "p-4 text-white text-center rounded",
              "style": "background-color: var(--colors-warning); border-radius: var(--borderRadius);"
            },
            "children": ["Warning Color"],
            "editable": { "contentEditable": true }
          },
          {
            "id": "danger-box",
            "type": "div",
            "props": {
              "className": "p-4 text-white text-center rounded",
              "style": "background-color: var(--colors-danger); border-radius: var(--borderRadius);"
            },
            "children": ["Danger Color"],
            "editable": { "contentEditable": true }
          }
        ]
      }
    ]
  }
}