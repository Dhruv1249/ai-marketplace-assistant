{
  "metadata": {
    "template": "classic",
    "name": "Classic",
    "description": "Traditional design with serif fonts and borders",
    "version": "1.0",
    "editable": true,
    "category": "traditional",
    "tags": ["formal", "heritage", "serif", "borders", "traditional"],
    "sections": ["hero", "gallery", "features", "specifications", "cta"],
    "responsive": true,
    "customizable": {
      "colors": true,
      "fonts": true,
      "spacing": true,
      "layout": true,
      "borders": true
    }
  },
  "editingConfig": {
    "allowedOperations": ["reorder", "style", "content", "add", "remove"],
    "constraints": {
      "minSections": 3,
      "maxSections": 7,
      "requiredSections": ["hero", "cta"]
    },
    "sectionTypes": {
      "hero": { "maxCount": 1, "required": true },
      "gallery": { "maxCount": 1, "required": false },
      "features": { "maxCount": 1, "required": false },
      "specifications": { "maxCount": 1, "required": false },
      "testimonials": { "maxCount": 1, "required": false },
      "cta": { "maxCount": 1, "required": true }
    }
  },
  "styleVariables": {
    "primaryColor": "#1e40af",
    "secondaryColor": "#374151",
    "backgroundColor": "#f9fafb",
    "textColor": "#111827",
    "accentColor": "#2563eb",
    "fontFamily": "Georgia, serif",
    "headingFont": "Georgia, serif",
    "fontSize": "16px",
    "lineHeight": "1.7",
    "borderRadius": "4px",
    "spacing": "1.5rem",
    "containerMaxWidth": "1200px",
    "borders": {
      "thin": "1px solid #d1d5db",
      "medium": "2px solid #9ca3af",
      "thick": "3px solid #6b7280"
    },
    "shadows": {
      "small": "0 1px 3px rgba(0,0,0,0.12), 0 1px 2px rgba(0,0,0,0.24)",
      "medium": "0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)",
      "large": "0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)"
    }
  },
  "component": {
    "id": "root",
    "type": "div",
    "props": {
      "className": "min-h-screen bg-gray-50 flex flex-col"
    },
    "children": [
      {
        "id": "container",
        "type": "div",
        "props": {
          "className": "flex-1 max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-12"
        },
        "children": [
          {
            "id": "hero-section",
            "type": "div",
            "sectionType": "hero",
            "editable": {
              "moveable": false,
              "removeable": false,
              "duplicatable": false,
              "styleEditable": true,
              "contentEditable": true
            },
            "editingMeta": {
              "name": "Hero Section",
              "description": "Traditional header with title and description",
              "icon": "type",
              "category": "content"
            },
            "props": {
              "className": "border-b-2 border-gray-800 pb-8 mb-8"
            },
            "children": [
              {
                "id": "hero-title",
                "type": "h1",
                "editable": {
                  "contentEditable": true,
                  "styleEditable": true,
                  "textAlign": true,
                  "fontSize": true,
                  "fontWeight": true,
                  "color": true
                },
                "editingMeta": {
                  "name": "Product Title",
                  "description": "Main product heading in serif font",
                  "contentType": "text"
                },
                "props": {
                  "className": "text-4xl md:text-5xl font-serif font-bold text-gray-900 leading-tight mb-4"
                },
                "children": ["{{content.title}}"]
              },
              {
                "id": "hero-description",
                "type": "p",
                "editable": {
                  "contentEditable": true,
                  "styleEditable": true,
                  "textAlign": true,
                  "fontSize": true,
                  "color": true,
                  "lineHeight": true
                },
                "editingMeta": {
                  "name": "Product Description",
                  "description": "Detailed product description in serif font",
                  "contentType": "textarea"
                },
                "props": {
                  "className": "text-lg text-gray-700 leading-relaxed font-serif max-w-4xl"
                },
                "children": ["{{content.description}}"]
              }
            ]
          },
          {
            "id": "gallery-section",
            "type": "div",
            "sectionType": "gallery",
            "editable": {
              "moveable": true,
              "removeable": false,
              "duplicatable": false,
              "styleEditable": true
            },
            "editingMeta": {
              "name": "Gallery Section",
              "description": "Product image gallery",
              "icon": "image",
              "category": "media"
            },
            "props": {
              "className": "mb-12"
            },
            "children": [
              {
                "id": "gallery-container",
                "type": "div",
                "props": {
                  "className": "border-2 border-gray-800"
                },
                "children": [
                  {
                    "id": "main-image-container",
                    "type": "div",
                    "props": {
                      "className": "aspect-[4/3] relative group bg-gray-100"
                    },
                    "children": [
                      {
                        "id": "main-image",
                        "type": "img",
                        "props": {
                          "src": "{{images[0]}}",
                          "alt": "Product image",
                          "className": "w-full h-full object-cover"
                        }
                      }
                    ]
                  }
                ]
              }
            ]
          },
          {
            "id": "features-section",
            "type": "div",
            "sectionType": "features",
            "editable": {
              "moveable": true,
              "removeable": true,
              "duplicatable": false,
              "styleEditable": true,
              "contentEditable": true
            },
            "editingMeta": {
              "name": "Features Section",
              "description": "Product features with explanations",
              "icon": "star",
              "category": "content"
            },
            "props": {
              "className": "mb-12"
            },
            "children": [
              {
                "id": "features-container",
                "type": "div",
                "props": {
                  "className": "border-2 border-gray-800 bg-white"
                },
                "children": [
                  {
                    "id": "features-header",
                    "type": "div",
                    "props": {
                      "className": "border-b-2 border-gray-800 bg-gray-100 px-6 py-4"
                    },
                    "children": [
                      {
                        "id": "features-title",
                        "type": "h2",
                        "editable": {
                          "contentEditable": true,
                          "styleEditable": true
                        },
                        "props": {
                          "className": "text-2xl font-serif font-bold text-gray-900"
                        },
                        "children": ["Distinguished Features"]
                      }
                    ]
                  },
                  {
                    "id": "features-content",
                    "type": "div",
                    "props": {
                      "className": "p-6"
                    },
                    "children": [
                      {
                        "id": "features-list",
                        "type": "div",
                        "props": {
                          "className": "space-y-8"
                        },
                        "children": "{{content.features.map}}"
                      }
                    ]
                  }
                ]
              }
            ]
          },
          {
            "id": "specs-section",
            "type": "div",
            "sectionType": "specifications",
            "editable": {
              "moveable": true,
              "removeable": true,
              "duplicatable": false,
              "styleEditable": true,
              "contentEditable": true
            },
            "editingMeta": {
              "name": "Specifications Section",
              "description": "Product specifications table",
              "icon": "list",
              "category": "content"
            },
            "props": {
              "className": "mb-12"
            },
            "children": [
              {
                "id": "specs-container",
                "type": "div",
                "props": {
                  "className": "border-2 border-gray-800 bg-white"
                },
                "children": [
                  {
                    "id": "specs-header",
                    "type": "div",
                    "props": {
                      "className": "border-b-2 border-gray-800 bg-gray-100 px-6 py-4"
                    },
                    "children": [
                      {
                        "id": "specs-title",
                        "type": "h2",
                        "editable": {
                          "contentEditable": true,
                          "styleEditable": true
                        },
                        "props": {
                          "className": "text-2xl font-serif font-bold text-gray-900"
                        },
                        "children": ["Product Specifications"]
                      }
                    ]
                  },
                  {
                    "id": "specs-content",
                    "type": "div",
                    "props": {
                      "className": "p-6"
                    },
                    "children": [
                      {
                        "id": "specs-table",
                        "type": "table",
                        "props": {
                          "className": "w-full"
                        },
                        "children": [
                          {
                            "id": "specs-tbody",
                            "type": "tbody",
                            "props": {},
                            "children": "{{content.specifications.entries}}"
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            ]
          },
          {
            "id": "cta-section",
            "type": "div",
            "sectionType": "cta",
            "editable": {
              "moveable": true,
              "removeable": false,
              "duplicatable": false,
              "styleEditable": true,
              "contentEditable": true
            },
            "editingMeta": {
              "name": "Call to Action",
              "description": "Purchase button section",
              "icon": "shopping-cart",
              "category": "action"
            },
            "props": {
              "className": "text-center"
            },
            "children": [
              {
                "id": "cta-container",
                "type": "div",
                "props": {
                  "className": "border-2 border-gray-800 bg-gray-100 p-8"
                },
                "children": [
                  {
                    "id": "cta-button",
                    "type": "button",
                    "editable": {
                      "contentEditable": true,
                      "styleEditable": true
                    },
                    "props": {
                      "className": "bg-gray-800 text-white px-12 py-4 font-serif text-lg font-semibold border-2 border-gray-800 hover:bg-white hover:text-gray-800 transition-colors duration-200 uppercase tracking-wider"
                    },
                    "children": ["Acquire This Piece"]
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}